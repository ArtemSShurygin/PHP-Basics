<form action="/user/update" method="post">
  <p>Изменить пользователя.</p>
  <input id="csrf_token" type="hidden" name="csrf_token" value="{{ csrf_token }}">
  <input hidden id="user-id" type="text" name="user_id" value="{{userData.userId}}">
  <p>
    <label for="user-name">Имя:</label>
    <input id="user-name" type="text" name="name" value="{{userData.userName}}">
  </p>
  <p>
    <label for="user-lastname">Фамилия:</label>
    <input id="user-lastname" type="text" name="lastname" value="{{userData.userLastName}}">
  </p>
  <p>
    <label for="user-birthday">День рождения:</label>
    <input id="user-birthday" type="text" name="birthday" placeholder="ДД-ММ-ГГГГ" value="{{userData.userBirthday | date('d-m-Y')}}">
  </p>
  <p><input type="submit" value="Изменить"></p>
</form>